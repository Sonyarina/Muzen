<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Meditation Theme Colors -->
    <style name="MeditationTheme" parent="AppTheme">
        <item name="colorPrimary">@color/tertiaryDarkColor</item>
        <item name="colorPrimaryDark">@color/tertiaryColor</item>
        <item name="android:drawableTint" tools:targetApi="23">@color/colorAccent</item>
        <item name="android:tint">@color/tertiaryColor</item>
    </style>

    <!-- Yoga Theme Colors -->
    <style name="YogaTheme" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="android:drawableTint" tools:targetApi="23">#fdf97c</item>
        <item name="android:tint">@color/orange</item>
    </style>

    <!-- Energy Theme Colors -->
    <style name="EnergyTheme" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="android:drawableTint" tools:targetApi="23">#ffd4e2</item>
        <item name="android:tint">@color/pink</item>
    </style>

    <!-- Sleep Theme Colors -->
    <style name="SleepTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:drawableTint" tools:targetApi="23">#d0f1f1</item>
        <item name="android:tint">@color/blue</item>
    </style>

    <!-- Now Playing Colors -->
    <style name="NowPlaying" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight" tools:targetApi="21">1</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_rowWeight" tools:targetApi="21">1</item>
    </style>

    <style name="CardStyle_NarrowList">
        <item name="android:layout_width">@dimen/narrow_list_album_art_icon</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginBottom">@dimen/narrow_list_item_vertical_margin</item>
    </style>

    <style name="CardView_Linear_Layout_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="CardView_Image_Style">
        <item name="android:layout_width">@dimen/narrow_list_album_art_icon</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_image_margin_bottom</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="CardView_Image_NarrowList">
        <item name="android:layout_width">@dimen/narrow_list_album_art_icon</item>
        <item name="android:layout_height">@dimen/narrow_list_album_art_icon</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
    </style>

    <style name="CardView_Text_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:textAlignment" tools:targetApi="17">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/card_view_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Main_Categories_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
    </style>

    <style name="Main_Categories_ViewAll_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textAlignment" tools:targetApi="17">center</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
    </style>

    <style name="icon_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="17">center</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif</item>
    </style>

    <style name="Now_Playing_Media_Buttons">

        <item name="android:padding">1dp</item>
    </style>
</resources>
