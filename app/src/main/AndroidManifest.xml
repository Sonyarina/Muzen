<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.muzen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeditationSongs"
            android:theme="@style/MeditationTheme" />
        <activity
            android:name=".SleepSongs"
            android:theme="@style/SleepTheme" />
        <activity
            android:name=".EnergySongs"
            android:theme="@style/EnergyTheme" />
        <activity
            android:name=".YogaSongs"
            android:theme="@style/YogaTheme" />
        <activity
            android:name=".NowPlaying"
            android:theme="@style/NowPlaying" />
    </application>

</manifest>